{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Development",
      "description": "Development build with tests and examples",
      "binaryDir": "${sourceDir}/build",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -fdiagnostics-color=always",
        "MEMSIM_BUILD_TESTS": "ON",
        "MEMSIM_BUILD_EXAMPLES": "ON",
        "MEMSIM_BUILD_BENCHMARKS": "OFF"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Optimized release build",
      "binaryDir": "${sourceDir}/build/release",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG",
        "MEMSIM_BUILD_TESTS": "OFF",
        "MEMSIM_BUILD_EXAMPLES": "OFF"
      }
    },
    {
      "name": "header-only",
      "displayName": "Header-Only",
      "description": "Header-only configuration for embedding",
      "binaryDir": "${sourceDir}/build/header-only",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "MEMSIM_HEADER_ONLY": "ON",
        "MEMSIM_BUILD_TESTS": "OFF",
        "MEMSIM_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "full",
      "displayName": "Full Build",
      "description": "Full build with all features",
      "binaryDir": "${sourceDir}/build/full",
      "inherits": ["dev"],
      "cacheVariables": {
        "MEMSIM_BUILD_BENCHMARKS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "jobs": 0
    },
    {
      "name": "release",
      "configurePreset": "release",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 0
      }
    }
  ]
}
